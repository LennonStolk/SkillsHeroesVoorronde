<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/pages/css/style.css">
</head>
<body class="container custom-background" background="/pages/images/background.webp">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">

        <form class="input-group" action="/" method="get">
            <div class="form-outline">
                <input type="text" id="form1" name="search" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">
                Zoeken
            </button>
        </form>

        <h1 class="custom-title">Aanbod spellen</h1>



        <ul>
            <% rows.forEach(function(row) { %>
              <li class="jumbotron d-flex">
                <img src="/pages/images/<%= row.img_src %>" width="180">
                <ul style="list-style: none;">
                    <li><strong><h4><%= row.name %></h4></strong></li>
                    <li><h5>Prijs: â‚¬<%= row.price %></h5></li>
                    <li>
                        <a href="/game/<%= row.id %>">Bekijken</a>
                    </li>
                </ul>
                
              </li>
            <% }); %>
          </ul>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>
